                    </Grid.RowDefinitions>
                    <TextBlock Visibility="Hidden"  x:Name="tip2" IsHitTestVisible="False" Text="Белый сигнал означает, что в вашей гипотезе есть нужный цвет, но стоит не на том месте" Margin="0, 10, 0, 0" />
