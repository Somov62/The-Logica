                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="TextAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="25" />
                    <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                    <Setter Property="LineHeight" Value="35" />
                </Style>
            </Grid.Resources>
            <Grid Grid.Row="0"  Margin="10, 5, 5, 5" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Margin="0, 0, 5, 0" Padding="10, 5" Background="{StaticResource Yellow}" CornerRadius="3" >
                    <Button Content="В меню" Margin="0" FontSize="20" Padding="10" Click="ToMenu_Click"/>
                </Border>
                <Border Margin="5, 0 ,0 ,0" Grid.Column="1" Padding="10, 5" Background="{StaticResource Yellow}" CornerRadius="3" >
